<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".presentation.activities.beforeHome.SplashActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/iv_splash"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_180sdp"
        app:layout_constraintBottom_toTopOf="@+id/live_flight_track"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintVertical_chainStyle="packed"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/splash" />

    <TextView
        android:id="@+id/live_flight_track"
        style="@style/sfb23p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/live_flight_track"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/live_flight_track2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_splash" />

    <TextView
        android:id="@+id/live_flight_track2"
        style="@style/sfr15s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_3sdp"
        android:text="@string/live_flight_track"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/live_flight_track" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/dot"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/live_flight_track2"
        app:layout_constraintTop_toTopOf="@+id/live_flight_track2"
        app:layout_constraintBottom_toBottomOf="@+id/live_flight_track2"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/dot" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottiepg"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@+id/live_flight_track2"
        app:layout_constraintEnd_toEndOf="@+id/live_flight_track2"
        app:layout_constraintStart_toStartOf="@+id/live_flight_track2"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/splash_loading"
        />

    <TextView
        android:id="@+id/loadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:fontFamily="@font/sf_pro_display_medium"
        android:text="@string/may_contain_ad"
        android:textColor="@color/text_color_s"
        android:textSize="12sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/adContainerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/adContainerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/all_round_white_bg"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent">

        <include layout="@layout/layout_banner_control"/>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>