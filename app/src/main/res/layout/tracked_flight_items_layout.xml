<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_sheet"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_362sdp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:background="@drawable/followed_all_half_round_white_bg"
    app:cardCornerRadius="@dimen/_18sdp">

    <ImageView
        android:id="@+id/iv_tracked_flight_date_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:src="@drawable/iv_tracked_flight_date_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDate"
        app:layout_constraintBottom_toBottomOf="@+id/tvDate"
        />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="@string/today"
        style="@style/sfm12p"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_tracked_flight_date_icon"
        />

    <TextView
        android:id="@+id/active"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_17sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:drawableLeft="@drawable/active_left_drawble"
        android:drawablePadding="@dimen/_4sdp"
        android:gravity="center"
        android:background="@drawable/text_active_bg"
        android:text="@string/active"
        android:textColor="#51B366"
        android:paddingStart="@dimen/_6sdp"
        android:paddingEnd="@dimen/_6sdp"
        style="@style/sfm10p"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvDate" />

    <ImageView
        android:id="@+id/selectedMove"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginBottom="4dp"
        android:src="@drawable/iv_airline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/active" />

    <TextView
        android:id="@+id/callSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="@string/qtr_611"
        style="@style/sfb15p"
        app:layout_constraintStart_toEndOf="@+id/selectedMove"
        app:layout_constraintTop_toTopOf="@+id/selectedMove" />

    <TextView
        android:id="@+id/sea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:text="@string/sea"
        style="@style/sfm11p"
        app:layout_constraintStart_toEndOf="@+id/selectedMove"
        app:layout_constraintTop_toBottomOf="@+id/callSign" />

    <ImageView
        android:id="@+id/iv_airplane"
        android:layout_width="@dimen/_12sdp"
        android:layout_height="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:src="@drawable/seekbar_thumb"
        app:layout_constraintBottom_toBottomOf="@+id/sea"
        app:layout_constraintStart_toEndOf="@+id/sea"
        app:layout_constraintTop_toTopOf="@+id/sea" />

    <TextView
        android:id="@+id/alt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="@string/alt"
        style="@style/sfm11p"
        app:layout_constraintStart_toEndOf="@+id/iv_airplane"
        app:layout_constraintTop_toBottomOf="@+id/callSign" />

    <TextView
        android:id="@+id/flightNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/details_flight_no_bg"
        android:fontFamily="@font/sf_pro_display_medium"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="@string/qr611"
        android:textColor="@color/text_color_p"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/selectedMove" />

    <TextView
        android:id="@+id/AirCraftiataNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:background="@drawable/details_aircraft_iata_bg"
        android:fontFamily="@font/sf_pro_display_medium"
        android:paddingStart="@dimen/_10sdp"
        android:paddingTop="@dimen/_2sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:text="@string/a359"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/flightNum"
        app:layout_constraintTop_toBottomOf="@+id/flightNum" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conFlightDetails"
        android:layout_width="0dp"
        android:layout_height="@dimen/_220sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AirCraftiataNumber"
        >

        <TextView
            android:id="@+id/depIataCode"
            style="@style/sfb23p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="ISB"
            app:layout_constraintEnd_toStartOf="@+id/dep_to_arriv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/depCityName"
            style="@style/sfr12s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="ISLAMABAD"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="@+id/depIataCode"
            app:layout_constraintStart_toStartOf="@+id/depIataCode"
            app:layout_constraintTop_toBottomOf="@+id/depIataCode" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_dep_w"
            android:id="@+id/iv_dep_w"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@+id/depCityName"
            app:layout_constraintEnd_toEndOf="@+id/depCityName"
            app:layout_constraintStart_toStartOf="@+id/depCityName"/>

        <TextView
            android:id="@+id/depTime"
            style="@style/sfb12p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_4sdp"
            android:text="5:15 AM"
            app:layout_constraintEnd_toEndOf="@+id/depCityName"
            app:layout_constraintStart_toStartOf="@+id/depCityName"
            app:layout_constraintTop_toBottomOf="@+id/iv_dep_w"
            />

        <TextView
            android:id="@+id/tvActual"
            style="@style/sfm11s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULED"
            app:layout_constraintEnd_toEndOf="@+id/depIataCode"
            app:layout_constraintStart_toStartOf="@+id/depIataCode"
            app:layout_constraintTop_toBottomOf="@+id/depTime" />

        <ImageView
            android:id="@+id/dep_to_arriv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_airport_search_dep_arr"
            app:layout_constraintEnd_toStartOf="@+id/arrivalIataCode"
            app:layout_constraintStart_toEndOf="@+id/depIataCode"
            app:layout_constraintTop_toTopOf="@+id/depIataCode" />

        <TextView
            android:id="@+id/eta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/sf_pro_display_regular"
            android:text="ETA"
            android:textColor="@color/text_color_s"
            app:layout_constraintEnd_toEndOf="@+id/dep_to_arriv"
            app:layout_constraintStart_toStartOf="@+id/dep_to_arriv"
            app:layout_constraintTop_toBottomOf="@+id/dep_to_arriv" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/sf_pro_display_bold"
            android:text="@string/_10_24_hrs"
            android:textColor="@color/text_color_p"
            app:layout_constraintEnd_toEndOf="@+id/dep_to_arriv"
            app:layout_constraintStart_toStartOf="@+id/dep_to_arriv"
            app:layout_constraintTop_toBottomOf="@+id/eta" />

        <TextView
            android:id="@+id/tvActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="@drawable/text_active_bg"
            android:drawableLeft="@drawable/active_left_drawble"
            android:drawablePadding="@dimen/_5sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingTop="@dimen/_2sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_2sdp"
            android:text="@string/active"
            android:textColor="@color/success"
            app:layout_constraintEnd_toEndOf="@+id/time"
            app:layout_constraintStart_toStartOf="@+id/time"
            app:layout_constraintTop_toBottomOf="@+id/time" />

        <TextView
            android:id="@+id/arrivalIataCode"
            style="@style/sfb23p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="DOH"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dep_to_arriv"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/arrCityName"
            style="@style/sfr12s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="DOHA"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="@+id/arrivalIataCode"
            app:layout_constraintStart_toStartOf="@+id/arrivalIataCode"
            app:layout_constraintTop_toBottomOf="@+id/arrivalIataCode" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_arrival_w"
            android:id="@+id/iv_arrival_w"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintEnd_toEndOf="@+id/arrivalIataCode"
            app:layout_constraintStart_toStartOf="@+id/arrivalIataCode"
            app:layout_constraintTop_toBottomOf="@+id/arrCityName"
            />

        <TextView
            android:id="@+id/arriTime"
            style="@style/sfb12p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/_4sdp"
            android:text="5:15 AM"
            app:layout_constraintEnd_toEndOf="@+id/arrivalIataCode"
            app:layout_constraintStart_toStartOf="@+id/arrivalIataCode"
            app:layout_constraintTop_toBottomOf="@+id/iv_arrival_w"
            />

        <TextView
            android:id="@+id/tvEstimated"
            style="@style/sfm11s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SCHEDULED"
            app:layout_constraintEnd_toEndOf="@+id/arriTime"
            app:layout_constraintStart_toStartOf="@+id/arriTime"
            app:layout_constraintTop_toBottomOf="@+id/arriTime" />

        <SeekBar
            android:id="@+id/discreteSeekBar"
            android:layout_width="0dp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:progress="60"
            android:max="100"
            android:progressDrawable="@drawable/seekbar_style"
            android:splitTrack="false"
            android:thumb="@drawable/seekbar_thumb"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvEstimated" />

        <TextView
            android:id="@+id/tvDepActualTime"
            style="@style/sfm11s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="ACTUAL"
            app:layout_constraintStart_toStartOf="@+id/discreteSeekBar"
            app:layout_constraintTop_toBottomOf="@+id/discreteSeekBar" />

        <TextView
            android:id="@+id/depActualTime"
            style="@style/sfm14acc11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="14:50"
            app:layout_constraintStart_toEndOf="@+id/tvDepActualTime"
            app:layout_constraintTop_toBottomOf="@+id/discreteSeekBar" />

        <TextView
            android:id="@+id/tvArrEstimatedTime"
            style="@style/sfm11s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="ESTIMATED"
            app:layout_constraintEnd_toStartOf="@+id/arrEstimatedTime"
            app:layout_constraintTop_toBottomOf="@+id/discreteSeekBar" />

        <TextView
            android:id="@+id/arrEstimatedTime"
            style="@style/sfm14acc11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="17:00"
            app:layout_constraintEnd_toEndOf="@+id/discreteSeekBar"
            app:layout_constraintTop_toBottomOf="@+id/discreteSeekBar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/iv_view_h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conFlightDetails" />

    <View
        android:id="@+id/view3"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/iv_view_v"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view1" />

    <TextView
        android:id="@+id/unfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_bold"
        android:text="@string/unfollow"
        android:textColor="@color/acc1"
        android:padding="@dimen/_5sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

    <TextView
        android:id="@+id/viewDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_bold"
        android:text="@string/view_details"
        android:padding="@dimen/_5sdp"
        android:textColor="@color/text_color_p"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1" />

</androidx.constraintlayout.widget.ConstraintLayout>


