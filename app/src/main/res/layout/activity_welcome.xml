<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".presentation.activities.WelcomeActivity">


    <include layout="@layout/app_margin" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/iv_Welcome"
        android:layout_width="0dp"
        android:layout_height="@dimen/_200sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_5sdp"
        android:elevation="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AirCraftiataNumber"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/welcome" />
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="@+id/glLeft"
        app:layout_constraintEnd_toEndOf="@+id/glRight"
        android:layout_marginBottom="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@+id/iv_Welcome"
        app:layout_constraintBottom_toTopOf="@+id/fl_adplaceholder">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvWelcome"
                style="@style/sfb23p"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/welcome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/tvHowToUse"
                style="@style/sfm14p"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:maxLines="1"
                android:text="@string/tell_us_how_will_you_use_this_app"
                app:layout_constraintEnd_toStartOf="@+id/iv_tick_welcome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/iv_tick_welcome"
                app:layout_constraintBottom_toBottomOf="@+id/iv_tick_welcome"
                />

            <ImageView
                android:id="@+id/iv_tick_welcome"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/iv_tick_welcome"
                android:visibility="invisible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvWelcome"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/conLive"
                android:layout_width="0dp"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/welcome_features_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_tick_welcome">

                <ImageView
                    android:id="@+id/iv_welcome_live"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/iv_welcome_live"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvOption1" />

                <TextView
                    android:id="@+id/tvOption1"
                    style="@style/sfm13p"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="10dp"
                    android:maxLines="1"
                    android:text="@string/live_flight_tracker"
                    android:textAlignment="textStart"
                    app:layout_constraintBottom_toBottomOf="@+id/tick"
                    app:layout_constraintEnd_toStartOf="@+id/tick"
                    app:layout_constraintStart_toEndOf="@+id/iv_welcome_live"
                    app:layout_constraintTop_toTopOf="@+id/tick" />

                <ImageView
                    android:id="@+id/tick"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/welcome_option_uns"
                    android:visibility="visible"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/conFollow"
                android:layout_width="0dp"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/welcome_features_bg"
                app:layout_constraintEnd_toEndOf="@+id/conLive"
                app:layout_constraintStart_toStartOf="@+id/conLive"
                app:layout_constraintTop_toBottomOf="@+id/conLive">

                <ImageView
                    android:id="@+id/iv_welcome_follow_flight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/iv_welcome_follow_flight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvOption2" />

                <TextView
                    android:id="@+id/tvOption2"
                    style="@style/sfm13p"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="10dp"
                    android:maxLines="1"
                    android:text="@string/follow_flights"
                    android:textAlignment="textStart"
                    app:layout_constraintBottom_toBottomOf="@+id/tick2"
                    app:layout_constraintEnd_toStartOf="@+id/tick2"
                    app:layout_constraintStart_toEndOf="@+id/iv_welcome_follow_flight"
                    app:layout_constraintTop_toTopOf="@+id/tick2" />

                <ImageView
                    android:id="@+id/tick2"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/welcome_option_uns"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/conFlightScheduled"
                android:layout_width="0dp"
                android:layout_height="@dimen/_55sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/welcome_features_bg"
                app:layout_constraintEnd_toEndOf="@+id/conLive"
                app:layout_constraintStart_toStartOf="@+id/conLive"
                app:layout_constraintTop_toBottomOf="@+id/conFollow">

                <ImageView
                    android:id="@+id/iv_welcome_scheduled_flight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/iv_welcome_scheduled_flight"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvOption3" />

                <TextView
                    android:id="@+id/tvOption3"
                    style="@style/sfm13p"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="10dp"
                    android:maxLines="1"
                    android:text="@string/view_flight_schedules"
                    android:textAlignment="textStart"
                    app:layout_constraintBottom_toBottomOf="@+id/tick3"
                    app:layout_constraintEnd_toStartOf="@+id/tick3"
                    app:layout_constraintStart_toEndOf="@+id/iv_welcome_scheduled_flight"
                    app:layout_constraintTop_toTopOf="@+id/tick3" />

                <ImageView
                    android:id="@+id/tick3"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/welcome_option_uns"
                    android:visibility="visible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <FrameLayout
        android:id="@+id/fl_adplaceholder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include layout="@layout/shimmer_native_with_large_media" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>