<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_screen_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.OnBoarding5Fragment">

    <include layout="@layout/app_margin" />

    <ImageView
        android:id="@+id/ivob1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:src="@drawable/onb1_bg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/sfb19p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/live_flight_tracker"
        app:layout_constraintBottom_toBottomOf="@+id/ivob1"
        app:layout_constraintEnd_toEndOf="@+id/ivob1"
        app:layout_constraintStart_toStartOf="@+id/ivob1" />

    <TextView
        android:id="@+id/tv_onb1_dots"
        style="@style/sfb11p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/track_flights_in_real_time"
        app:layout_constraintStart_toStartOf="@+id/glLeft"
        app:layout_constraintTop_toTopOf="@+id/btnNext" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_7sdp"
        android:src="@drawable/onb1_dots"
        app:layout_constraintStart_toStartOf="@+id/glLeft"
        app:layout_constraintTop_toBottomOf="@+id/tv_onb1_dots" />

    <ImageView
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_25sdp"
        android:src="@drawable/onb_next_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/glRight" />

</androidx.constraintlayout.widget.ConstraintLayout>