<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg"
    tools:context=".presentation.activities.SearchActivity">

    <include layout="@layout/app_margin" />

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:rotation="180"
        android:src="@drawable/live_flight_tracker_view_map_forward_icon"
        app:layout_constraintStart_toStartOf="@+id/glLeft"
        app:layout_constraintTop_toTopOf="@+id/glTop"
        app:tint="@color/white" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/sfb17p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_bold"
        android:text="@string/search"
        app:layout_constraintBottom_toBottomOf="@+id/btnBack"
        app:layout_constraintEnd_toEndOf="@id/glRight"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="@+id/btnBack" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/iv_airplane_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:layout_gravity="center"
        app:lottie_autoPlay="true"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/search" />

<!--    <ImageView-->
<!--        android:id="@+id/iv_home_cloud"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:src="@drawable/iv_home_cloud"-->
<!--        app:layout_constraintDimensionRatio="3:2"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        />-->

<!--    <ImageView-->
<!--        android:id="@+id/iv_airplane_home"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/_80sdp"-->
<!--        android:src="@drawable/iv_airplane_search"-->
<!--        app:layout_constraintBottom_toBottomOf="@+id/iv_home_cloud"-->
<!--        app:layout_constraintTop_toTopOf="@+id/iv_home_cloud" />-->

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/glRight"
        app:layout_constraintStart_toStartOf="@+id/glLeft"
        android:layout_marginTop="-40dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_airplane_home">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnAirport"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_95sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/btn_search_airport_search_bg"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_search_now_home"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/iv_search_now_home"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvAirports"
                    style="@style/sfb17acc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/airports"
                    app:layout_constraintBottom_toTopOf="@+id/btnSearchAirport"
                    app:layout_constraintStart_toEndOf="@+id/iv_search_now_home"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/btnSearchAirport"
                    style="@style/sfm13s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:layout_marginEnd="@dimen/_80sdp"
                    android:text="@string/find_airport_details_routes_and_scheduled_flights"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvAirports"
                    app:layout_constraintTop_toBottomOf="@+id/tvAirports" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <FrameLayout
                android:id="@+id/fl_adplaceholder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="5dp"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@+id/btnAirport"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" >
                <include layout="@layout/shimmer_native_with_large_media" />
            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnAircraft"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_95sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/btn_search_aircraft_search_bg"
                app:layout_constraintTop_toBottomOf="@+id/fl_adplaceholder">

                <ImageView
                    android:id="@+id/iv_airplane_followed_flight_home"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/iv_search_now_home"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvAircraft"
                    style="@style/sfb17acc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:text="@string/aircraft"
                    app:layout_constraintBottom_toTopOf="@+id/tvFollowedFlights"
                    app:layout_constraintEnd_toStartOf="@+id/iv_airplane_followed_flight_home"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tvFollowedFlights"
                    style="@style/sfm13s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_80sdp"
                    android:text="@string/track_specific_aircraft_by_type_or_model"
                    android:textAlignment="viewEnd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tvAircraft"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvAircraft" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnAirlines"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_95sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/btn_search_airline_search_bg"
                app:layout_constraintTop_toBottomOf="@+id/btnAircraft">

                <ImageView
                    android:id="@+id/iv_star_saved_flight_home"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:src="@drawable/iv_search_now_home"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvAirlines"
                    style="@style/sfb17acc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="@string/airline"
                    app:layout_constraintBottom_toTopOf="@+id/tvExploreGlobalAirlines"
                    app:layout_constraintStart_toEndOf="@+id/iv_star_saved_flight_home"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tvExploreGlobalAirlines"
                    style="@style/sfm13s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_80sdp"
                    android:maxLines="2"
                    android:text="@string/explore_global_airlines_and_their_active_flights"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tvAirlines"
                    app:layout_constraintTop_toBottomOf="@+id/tvAirlines" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnTailNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_95sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/btn_search_tail_number_search_bg"
                app:layout_constraintTop_toBottomOf="@+id/btnAirlines">

                <ImageView
                    android:id="@+id/iv_scheduled_flight_home"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/iv_search_now_home"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvTailNumber"
                    style="@style/sfb17acc1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:text="@string/tail_number"
                    app:layout_constraintBottom_toTopOf="@+id/tvTrackAircarftByTailNo"
                    app:layout_constraintEnd_toStartOf="@+id/iv_scheduled_flight_home"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tvTrackAircarftByTailNo"
                    style="@style/sfm13s"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_50sdp"
                    android:maxLines="2"
                    android:text="@string/track_aircraft_by_registration_or_icao24_number"
                    android:textAlignment="viewEnd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tvTailNumber"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvTailNumber" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>